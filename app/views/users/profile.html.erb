
<div class="row">
  <%= render 'shared/sidebar' %>
  
  
  
  <div class="span6 ">
  <h1>
    Update your profile here!
  </h1>
    <%= form_for(@user) do |f| %>

	  <%= render 'shared/error_messages', object: f.object %>
	  
      <%= f.label :email %>
      <%= f.text_field :email, :value=>@user.email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
	  
	  <%= f.label :first_name %>
      <%= f.text_field :first_name, :value=>@user.first_name %>

	  <%= f.label :last_name %>
      <%= f.text_field :last_name, :value=>@user.last_name %>
	  
	  <%= f.label :address %>
      <%= f.text_field :address, :value=>@user.address %>
	  
	  <%= f.label :phone %>
      <%= f.text_field :phone, :value=>@user.phone %>

      <%= f.submit "Update my profile", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
  
</div>


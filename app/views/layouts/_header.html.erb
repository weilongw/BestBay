<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container" style="width:90%;">
      <%= link_to "BestBay", root_url , :id=>'logo' %>
      <nav>
      <ul class="nav pull-right">
        <li><%= link_to "Home",    root_url %></li>
		<li id="notification_header">
		<% if new_notification != 0 %>
		<% note_name =  new_notification .to_s() + " new messages!"%>
		  <%= link_to note_name, '/notification' %>
		<% end %>
		</li>
        <% if signed_in? %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Post New Item", '/post' %></li>
                <li><%= link_to "My BestBay", '/selling' %></li>
				<li><%= link_to "Profile Setting", '/profile' %></li>
				<li><%= link_to "Notification", '/notification' %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to "Sign in", '/signin' %></li>
			<li><%= link_to "Sign up", '/signup' %></li>
        <% end %>

      </ul>
    </nav>
    </div>
  </div>
</header>
